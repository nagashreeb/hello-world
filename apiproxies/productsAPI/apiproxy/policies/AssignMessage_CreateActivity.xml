<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage enabled="true" continueOnError="false" async="false" name="AssignMessage_CreateActivity">
    <DisplayName>AssignMessage_CreateActivity</DisplayName>
    <FaultRules/>
    <Properties/>
    <Set>
        <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
            {
              &quot;actor&quot;:
                {
                &quot;displayName&quot;:&quot;%myretail.username#&quot;,
                &quot;uuid&quot;:&quot;%myretail.userid#&quot;,
                &quot;username&quot;:&quot;%myretail.login#&quot;,
                &quot;email&quot;:&quot;%myretail.email#&quot;,
                &quot;picture&quot;:&quot;%myretail.picture#&quot;
                },
                &quot;verb&quot;:&quot;post&quot;,
                &quot;content&quot;:&quot;Posted a Review&quot;,
                &quot;reviewid&quot;:&quot;%myretail.reviewid#&quot;,
                &quot;productid&quot;:&quot;%myretail.productid#&quot;,    
                &quot;productname&quot;:&quot;%myretail.productname#&quot;,
                &quot;productimage&quot;:&quot;%myretail.productimage#&quot;,
                &quot;reviewcontent&quot;:&quot;%myretail.reviewcontent#&quot;
            }
    </Payload>
        <Verb>POST</Verb>
        <Path>/cosafinity/sandbox/users/{accesstoken.userid}/activities</Path>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="request">createactivity_request</AssignTo>
</AssignMessage>
