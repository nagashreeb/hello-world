<ExtractVariables name="ExtractUser">
	<Source clearPayload="false">getuser_response</Source>
    <VariablePrefix>myretail</VariablePrefix>
     <JSONPayload>
        <Variable name="userid" type="string">
            <JSONPath>$.entities[0].uuid</JSONPath>
        </Variable>
        <Variable name="username" type="string">
            <JSONPath>$.entities[0].name</JSONPath>
        </Variable>
        <Variable name="email" type="string">
            <JSONPath>$.entities[0].email</JSONPath>
        </Variable>
        <Variable name="login" type="string">
            <JSONPath>$.entities[0].username</JSONPath>
        </Variable>
        <Variable name="picture" type="string">
            <JSONPath>$.entities[0].picture</JSONPath>
        </Variable>
    </JSONPayload>
</ExtractVariables>
